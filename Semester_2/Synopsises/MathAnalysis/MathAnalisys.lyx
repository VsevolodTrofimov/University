\begin_layout Enumerate
\begin_inset Formula $f,g$
\end_inset

 — непрерывны на 
\begin_inset Formula $[a,b]$
\end_inset

.
 Тогда 
\begin_inset Formula $\int_{a}^{b}(f(x)+g(x))dx=\int_{a}^{b}(f(x)dx+\int_{a}^{b}g(x))dx$
\end_inset

.
 Доказательство: 
\begin_inset Formula $F,G$
\end_inset

 — первообразные для.
 Тогда 
\begin_inset Formula $h=f+g$
\end_inset

, 
\begin_inset Formula $H=F+G$
\end_inset

, значит, 
\begin_inset Formula $H'(x)=h(x)$
\end_inset

.
 Значит, 
\begin_inset Formula $\int_{a}^{b}(f(x)+g(x))dx=H(b)-H(a)=(F(b)+G(b))-(F(a)+G(a))=F(b)-F(a)+G(b)-G(a)=\int_{a}^{b}f(x)dx+\int_{a}^{b}g(x)dx$
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $f$
\end_inset

— непрерывна на 
\begin_inset Formula $[a,b]$
\end_inset

, 
\begin_inset Formula $\alpha$
\end_inset

 — число.
 Тогда 
\begin_inset Formula $\int_{a}^{b}(\alpha g(x))dx=\alpha\int g(x))dx$
\end_inset

.
 Доказательство самостоятельно.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\int_{a}^{b}(\alpha f(x)+\beta g(x))dx=\alpha\int_{a}^{b}f(x)dx+\beta\int_{a}^{b}g(x)dx$
\end_inset

.
 Доказательство очевидно.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\int_{a}^{b}(\sum_{k=1}^{n}\alpha_{k}f_{k}(x))dx=\sum_{k=1}^{n}\alpha_{k}\int_{a}^{b}f_{k}(x)$
\end_inset

.
 Доказательство очевидно по индукции.
\end_layout

\begin_layout Enumerate
Введем соглашение: 
\begin_inset Formula $a<b$
\end_inset

, то 
\begin_inset Formula $\int_{b}^{a}f(x)dx=-\int_{a}^{b}f(x)dx$
\end_inset

.
 
\end_layout

\begin_layout Enumerate
\begin_inset Formula $a,b,c$
\end_inset

 — любые числа, 
\begin_inset Formula $f$
\end_inset

 непрерывна на любом промежутке с концами 
\begin_inset Formula $a,b,c$
\end_inset

.
 Тогда 
\begin_inset Formula $\int_{a}^{b}=\int_{a}^{c}+\int_{c}^{b}$
\end_inset

 для любых случаев расположения 
\begin_inset Formula $a,b,c$
\end_inset

.
 Доказательство: 
\begin_inset Formula $a<c<b$
\end_inset

.
 Тогда 
\begin_inset Formula $\int_{b}^{c}=\int_{b}^{a}+\int_{a}^{b}...$
\end_inset


\end_layout

