\end_inset

;
\end_layout

\begin_layout Lemma
2) 
\begin_inset Formula $\exists(I-B)^{-1}=(I+B+B^{2}+...+B^{k}+...)$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Lemma
Если 
\begin_inset Formula $\norm B\leq q<1$
\end_inset

, то 
\begin_inset Formula $(I-B)^{-1}$
\end_inset

 существует, равна 
\begin_inset Formula $\sum_{i=1}^{\infty}B^{i}$
\end_inset

 и 
\begin_inset Formula $\norm{(I-B)^{-1}}\leq\frac{1}{1-q}$
\end_inset

.
\end_layout

\begin_layout Proof
\begin_inset Formula $\norm B\leq q<1\Rightarrow\norm{i+B+...+B^{k}+...}\leq\norm I+\norm B+...+\norm{B^{k}}+...\leq\norm I+\norm B+...+\norm B^{k}+...\leq1+q+...+q^{k}+...=\frac{1}{1-q}$
\end_inset

, следовательно, существует 
\begin_inset Formula $V=\sum_{k=0}^{\infty}B^{i}$
\end_inset

, такое, что 
\begin_inset Formula $\norm V\leq\frac{1}{1-q}$
\end_inset

.
\end_layout

\begin_layout Proof
Тогда 
\begin_inset Formula $(I-B)V=IV-BV=I+B+B^{2}+...+B^{k}+...-B-B^{2}-...-B^{k}-...=I$
\end_inset

, следовательно 
\begin_inset Formula $\norm{(I-B)^{-1}}\leq\frac{1}{1-q}$
\end_inset

.
\end_layout

\end_deeper
