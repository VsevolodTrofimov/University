\begin_layout Theorem
1) 
\begin_inset Formula $\norm{x^{*}-x^{(k)}}\leq\frac{q}{1-q}\norm{x^{(k)}-x^{(k-1)}}$
\end_inset

 — апостериорная оценка;
\end_layout

\begin_layout Theorem
2) 
\begin_inset Formula $\norm{x^{*}-x^{(k)}}\leq\frac{q^{k}}{1-q}\norm{x^{(1)}-x^{(0)}}$
\end_inset

 — априорная оценка.
\end_layout

\begin_layout Proof
